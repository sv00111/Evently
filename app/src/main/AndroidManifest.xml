<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shreyvalia.evently">

    <uses-feature android:name="android.hardware.camera2" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".slider"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_slider"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SliderActivity" />
        <activity
            android:name=".CreateEventActivity"
            android:label="title_create_event_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".detailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".detailPhoto"
            android:label="@string/title_activity_detail_photo"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
